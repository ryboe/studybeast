brew 'diesel' # cli for running db migrations
brew 'fd' # fast find replacement
brew 'git' # the brewed git is more up-to-date than the system git
brew 'go' # for `go tool pprof`
brew 'jq' # for parsing `gcloud` output in scripts
brew 'rustup-init' # for installing the rust compiler and tooling
brew 'ripgrep' # for fast grepping in scripts
brew 'shellcheck' # find bugs in bash scripts
brew 'shfmt' # formatting bash scripts
brew 'terraform' # for deploying infra
brew 'terraform-docs' # generate markdown and HTML docs from terraform files
brew 'tflint' # lint terraform files

cask 'google-cloud-sdk' # gcloud
